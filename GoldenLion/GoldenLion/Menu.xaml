<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GoldenLion.Menu">
    <ContentPage.Content>
        <StackLayout>
            <StackLayout Orientation="Horizontal">
                <StackLayout Orientation="Vertical" HorizontalOptions="FillAndExpand">
                    <Button x:Name="ButtonAttendance" Text="Attendance" Clicked="ButtonAttendance_Clicked"/>
                </StackLayout>
                <StackLayout Orientation="Vertical" HorizontalOptions="FillAndExpand">
                    <Button x:Name="ButtonTestPayment" Text="Payment" Clicked="ButtonTestPayment_Clicked"/>
                </StackLayout>
            </StackLayout>
            <Button x:Name="ButtonTakePhoto" Text="Take Photo" />
            <Button x:Name="ButtonCalendar" Text="Calendar" Clicked="ButtonCalendar_Clicked" />
            <Button x:Name="ButtonTestLogout" Text="Test Logout" Clicked="ButtonTestLogout_Clicked" />
            <Button x:Name="ButtonDisplay" Text="Display" Clicked="ButtonDisplay_Clicked" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>