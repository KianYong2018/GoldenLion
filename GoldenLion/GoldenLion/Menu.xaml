<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GoldenLion.Menu">
    <ContentPage.Content>
        <StackLayout>
            <StackLayout Orientation="Horizontal">
                <StackLayout Orientation="Vertical" HorizontalOptions="FillAndExpand">
                    <!-- x:Name ButtonAttendance, need to fully understand AttendancePage() -->
                    <Button x:Name="ButtonAttendance" Text="AttendanceMightChangeTOpayment" Clicked="ButtonAttendance_Clicked" />
                </StackLayout>
                <StackLayout Orientation="Vertical" HorizontalOptions="FillAndExpand">
                    <Button x:Name="ButtonTestPayment" Text="Attendance" Clicked="ButtonTestPayment_Clicked"/>
                </StackLayout>
            </StackLayout>
            <Button x:Name="ButtonTakePhoto" Text="Take Photo" IsEnabled="False" IsVisible="False"/>
            <Button x:Name="ButtonCalendar" Text="Calendar" Clicked="ButtonCalendar_Clicked" IsEnabled="False" IsVisible="False"/>
            <Button x:Name="ButtonLogout" Text="Logout" Clicked="ButtonLogout_Clicked" />
            <Button x:Name="ButtonDisplay" Text="Display" Clicked="ButtonDisplay_Clicked" />
            <Button x:Name="ButtonEdit" Text="Edit"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>