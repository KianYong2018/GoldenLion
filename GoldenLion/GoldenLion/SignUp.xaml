<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GoldenLion.SignUp" Title="Sign Up">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Name" />
            <Entry x:Name="EntryName" Placeholder="Name" />
            <Label Text="Username" />
            <Entry x:Name="EntryUsername" Placeholder="Username"/>
            <Label Text="Password" />
            <Entry x:Name="EntryPassword" Placeholder="Password"/>
            <Label Text="Role"/>
            <Entry x:Name="EntryRole" Placeholder="Admin/CIC/Member"/>
            <Button x:Name="Button" Text="Sign Up" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>